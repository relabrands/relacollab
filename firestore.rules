rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // User profiles
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Campaigns
    match /campaigns/{campaignId} {
      allow read: if isAuthenticated(); // Allow all auth users to see campaigns (for creators to find them)
      allow create: if isAuthenticated() && request.resource.data.brandId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.brandId == request.auth.uid;
    }
    
    // Allow read/write for other collections for now to unblock development
    // (You should tighten this later)
    match /{document=**} {
      allow read, write: if isAuthenticated();
    }
  }
}
